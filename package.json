{
  "name": "pika-wifi",
  "version": "1.0.0",
  "description": "Pika Wifi - Motivation based on your Wi-Fi signal.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Shanks",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "node-wifi": "^2.0.16"
  },
  "build": {
    "appId": "com.shanks.pikawifi",
    "productName": "Pika Wifi",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}
